{
  "$schema": "https://opencode.ai/schemas/config.json",
    "compaction": {
    "auto": true,
    "prune": true
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "agent": {
    "compaction": {
      "mode": "subagent",
      "model": "github-copilot/gpt-5-mini",
      "steps": 1,
      "temperature": 0.0,
      "disable": false
    },
    "fixer-autonomous": {
      "mode": "primary",
      "description": "Autonomous fixer: iterate until the task is verifiably done.",
      "temperature": 0.1,
      "prompt": "{file:./prompts/fixer-autonomous.txt}",
      "permission": {
        "question": "allow"
      }
    },
    "fixer-autonomous-subagent": {
      "mode": "subagent",
      "description": "Autonomous fixer: iterate until the task is verifiably done.",
      "temperature": 0.1,
      "prompt": "{file:./prompts/fixer-autonomous.txt}"
    },
    "reproducer-autonomous": {
      "mode": "subagent",
      "description": "Autonomous reproducer: try to build a repro for a failure.",
      "temperature": 0.1,
      "prompt": "{file:./prompts/reproducer-autonomous.txt}"
    }
  },
  "experimental": {
    "continue_loop_on_deny": true
  }
}
